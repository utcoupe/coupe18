<strategies>
	<teams>
		<team name="green"/>
		<team name="orange"/>
	</teams>

	<!-- STRATEGY real game actions ! -->
	<strategy name="button_then_distrib">
		<actions name="In-Game Actions">
			<orderref ref="delay" name="5 points bee loaded" reward="5"/>
			<orderref ref="delay" name="5 points home installed" reward="5"/>

			<actionref ref="game_start"/>

			<actionlist name="Main actions">
				<actionlist name="Do unicolor distributor">
					<actionref ref="load_unicolor_distributor"/>
					<actionref ref="fire_full_clean_balls"/>
				</actionlist>

				<actionlist name="Do multicolor distributor">
					<actionref ref="load_multicolor_distributor"/>
					<actionlist name="Unload multi balls">
						<actionref ref="unload_dirty_balls"/>
					</actionlist>
				</actionlist>

				<actionref ref="activate_bee"/>

				<orderref ref="delay" name="10 points no game over" reward="10"/>
				<actionref ref="goto_spawn"/>
			</actionlist>
		</actions>
		<actions_onfinish name="After-Game Actions">
		</actions_onfinish>
	</strategy>

	<strategy name="canon_tests">
		<actions name="In-Game Actions">
			<actionref ref="game_start"/>

			<actionlist name="Main actions">
				<orderref ref="actuator_set" name="activate button with servo">
					<name>canon</name>
					<preset>ON</preset>
				</orderref>
				<actionlist repeat="10">
					<orderref ref="do_barrel_action">
						<sort>0</sort>
					</orderref>
				</actionlist>
				<orderref ref="actuator_set" name="activate button with servo">
					<name>canon</name>
					<preset>OFF</preset>
				</orderref>
			</actionlist>
		</actions>
		<actions_onfinish name="After-Game Actions">
		</actions_onfinish>
	</strategy>
</strategies>
