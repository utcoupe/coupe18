<strategies>
	<teams>
		<team name="green"/>
		<team name="orange"/>
	</teams>

	<!-- Real game strategies -->
	<strategy name="button_bee_cube">
		<actionref ref="game_setup"/>
		<actionref ref="game_start"/>

		<tasklist name="Main actions">
			<actionref ref="activate_button"/>
			<actionref ref="activate_bee"/>
			<actionref ref="get_cubes"/>
		</tasklist>
