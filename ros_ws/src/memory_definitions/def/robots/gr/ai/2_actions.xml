<actions>
	<action ref="jack">
		<params/>
		<conditions/>
		<actions exec="all" order="linear">
			<orderref ref="ask_for_jack"/>
			<orderref ref="wait_for_jack" needsprevious="true"/>
		</actions>
	</action>

	<action ref="game_start" name="Game start routine actions">
		<params></params>
		<conditions></conditions>
		<actions>
			<orderref ref="set_robot_pos">
				<position>
					<x>0.2</x>
					<y>1.65</y>
					<theta>0</theta>
				</position>
			</orderref>

			<actionref ref="jack" needsprevious="true"/>

			<orderref ref="timer_start" needsprevious="true">
				<duration>20</duration>
			</orderref>

			<orderref ref="set_game_status_ingame" needsprevious="true"/>

			<orderref ref="delay" needsprevious="true">
				<duration>1</duration>
			</orderref>
		</actions>
	</action>

	<action ref="activate_button" name="Go and activate Home Button" reward="30">
		<params></params>
		<conditions></conditions>
		<actions exec="all" order="linear">
			<orderref ref="asserv_goto" name="approach button">
				<target_pos>
					<x>1.13</x>
					<y>1.65</y>
					<theta>1.5708</theta>
				</target_pos>
			</orderref>

			<orderref ref="asserv_goto" name="accost button">
				<target_pos>
					<x>1.13</x>
					<y>1.8</y>
					<theta>1.5708</theta>
				</target_pos>
			</orderref>

			<orderref ref="actuator_servo_set_pos" name="activate button with servo">
				<name>servo_button</name>
				<preset>OPEN</preset>
			</orderref>

			<orderref ref="actuator_servo_set_pos" name="close button">
				<name>servo_button</name>
				<preset>OPEN</preset>
			</orderref>

			<orderref ref="delay" name="LOAD MULTI ACTIONS (delay for now)">
				<duration>2</duration>
			</orderref> <!-- TEMPORARY -->

			<orderref ref="asserv_goto" name="go back to approach">
				<target_pos>
					<x>1.13</x>
					<y>1.65</y>
					<theta>1.5708</theta>
				</target_pos>
			</orderref>
		</actions>
	</action>

