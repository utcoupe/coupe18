<belt>
  <params>
    <max_range>0.5</max_range> <!-- meters -->
    <angle>0.44</angle> <!-- rad -->
    <precision>0.05</precision> <!-- percents -->
  </params>
  <sensors>
    <sensor id="oui"> <!-- x, y in meters, a in rad -->
      <x>0.1</x>
      <y>0.1</y>
      <a>3.1415</a>
    </sensor>
    <sensor id="non">
      <x>-0.1</x>
      <y>-0.1</y>
      <a>-3.1415</a>
    </sensor>
  </sensors>
</belt>
